<MyGridLayout>
    name:name
    pizza:pizza
    color:color

    GridLayout:
        cols:1
        size: root.width, root.height

        GridLayout:
            cols:2

            Label:
                text: "Name"
            TextInput:
                multiline: False
                id:name


            Label:
                text: "Favourite pizza"
            TextInput:
                multiline: False
                id:pizza


            Label:
                text: "Favourite color"
            TextInput:
                multiline: False
                id:color
        Button:
            text: "Submit"
            font_size:32
            on_press: root.press()
                